<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context="com.example.intern.guessthenumber.MainActivity">

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnlisten"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/btn2"
        android:text="2"
        android:textColor="#000"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/btn2"
        android:background="@drawable/btn1"
        android:text="1"
        android:textColor="#fff"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:background="@drawable/btn3"
        android:text="3"
        android:textColor="#800"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn4"
        android:text="4"
        android:textColor="#00BFFF"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn4"
        android:layout_alignBottom="@+id/btn4"
        android:layout_alignStart="@+id/btn2"
        android:background="@drawable/btn5"
        android:text="5"
        android:textColor="#00F"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignStart="@+id/btn3"
        android:background="@drawable/btn6"
        android:text="6"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignStart="@+id/btn4"
        android:background="@drawable/btn7"
        android:text="7"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn8"
        android:text="8"
        android:textColor="#FF0"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignStart="@+id/btn6"
        android:background="@drawable/btn9"
        android:text="9"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="-2sp"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/btnlisten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn2"
        android:layout_marginBottom="13dp"
        android:background="#000"
        android:text="Listen"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="35dp" />

</RelativeLayout>
